{
  "git": {
    "commit": true,
    "commitMessage": "chore(release): v${version}",
    "tag": true,
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true,
    "requireUpstream": true
  },
  "npm": {
    "publish": true,
    "ignoreVersion": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm run clean", "pnpm run build"],
    "after:git:release": ["echo 'Released v${version} to GitHub'"],
    "after:release": ["echo 'Published v${version} to npm'"]
  }
}

